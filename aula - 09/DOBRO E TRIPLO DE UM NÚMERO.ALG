Algoritmo "semnome"

Var
n1, resultado : inteiro

Inicio
escreval ("Digite um numero : ")

leia (n1)


se (n1 >0) entao
   resultado <- n1 * 2
   escreval ("O dobro de ", n1," é", resultado)
senao

   resultado <- -n1  * 3
   escreval("O triplo de", n1, " é", resultado)

fimse


Fimalgoritmo